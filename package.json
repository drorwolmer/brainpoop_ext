{
  "name": "ext",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "nodemon --watch 'src/*' -e ts,tsx --exec yarn compile",
    "compile-popup": "esbuild src/main.tsx --bundle --outfile=dist/main.js --loader:.html=text",
    "compile-background": "esbuild src/background.ts --bundle --outfile=dist/background.js",
    "compile": "yarn compile-popup && yarn compile-background"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.179",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@types/react-timeago": "^4.1.3",
    "esbuild": "^0.14.24",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-timeago": "^6.2.1"
  }
}
